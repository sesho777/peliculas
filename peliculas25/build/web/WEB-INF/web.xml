<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletPeliculas</servlet-name>
        <servlet-class>controller.ServletPeliculas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletImagenes</servlet-name>
        <servlet-class>controller.ServletImagenes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBusquedas</servlet-name>
        <servlet-class>controller.ServletBusquedas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUsuarios</servlet-name>
        <servlet-class>controller.ServletUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>controller.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAjax</servlet-name>
        <servlet-class>controller.ServletAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdate</servlet-name>
        <servlet-class>controller.ServletUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMod</servlet-name>
        <servlet-class>controller.ServletMod</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEstrenos</servlet-name>
        <servlet-class>controller.ServletEstrenos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPeliculas</servlet-name>
        <url-pattern>/servletPeliculas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletImagenes</servlet-name>
        <url-pattern>/servletImagenes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBusquedas</servlet-name>
        <url-pattern>/servletBusquedas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUsuarios</servlet-name>
        <url-pattern>/servletUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/servletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAjax</servlet-name>
        <url-pattern>/servletAjax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdate</servlet-name>
        <url-pattern>/servletUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMod</servlet-name>
        <url-pattern>/servletMod</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>ServletEstrenos</servlet-name>
        <url-pattern>/servletEstrenos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
